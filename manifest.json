{
    "manifest_version": 2,
    "version": "1.0",

    "name": "Twitter Social Toolkit",
    "description": "Allows you to share text, images, content, links, page, etc. to your twitter account",

    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "64": "icon.png",
        "32": "icon.png",
        "16": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "contextMenus"
    ]
}
